<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to recording.title, recording_path(recording) %>
      <span class="pull-right">
        <span class="glyphicon glyphicon-comment"></span> <%= recording.comments.count %> |
        <span class="glyphicon glyphicon-heart"></span> <%= recording.get_likes.size %>
      </span>
    </h3>
  </div>
  <div class="panel-body">
    <%= render partial: "recordings/tag", collection: recording.tag_list %>
  </div>
</div>
