<%= form_for @comment, url: recording_comments_path(@recording), remote: true, class: "form-inline", id: "comment-form"  do |f| -%>
    <div class="form-group">
      <%= f.text_area :body, placeholder: "Add comment", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add", class: "btn btn-primary" %>
    </div>
<% end %>


